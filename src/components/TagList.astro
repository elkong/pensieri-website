---
const { tags } = Astro.props;
---

<div class="tag-list">
    <style>
        #tags-text {
          text-align: center;
          margin-top: 20px;
          margin-bottom: 5px;
        }
    </style>
    <p id="tags-text">TAGS</p>
    <div class="tags">{tags.map((tag: any) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}</div>
</div>