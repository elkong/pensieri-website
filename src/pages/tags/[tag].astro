---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getPostParams } from '../../utils/postParams.ts';

export async function getStaticPaths() {
    const allPosts = await getCollection("blog");

    const uniqueTags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post: any) => post.data.tags.includes(tag));
        return {
            params: { tag },
            props: { posts: filteredPosts }
        }
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
// const filteredPosts = posts.filter((post: any) => post.frontmatter.tags?.includes(tag));
---
<BaseLayout>
    <p>Posts tagged with <span class="tag">{tag}</span></p>
    <ul>
        {posts.map((post: any) => {
            const { path } = getPostParams(post);

            return (
            <li>
                <span class="pubDate">{post.data.pubDate.toISOString().slice(0, 10)}</span>
                <a href={`/posts/${path}/`}>{post.data.title}</a>
            </li>
            )
        })}
    </ul>
</BaseLayout>