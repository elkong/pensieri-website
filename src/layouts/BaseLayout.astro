---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<!-- Script to change theme to dark mode if needed. -->
		<script is:inline>
			(function() {
			  	const theme = localStorage.getItem('theme');
			  	if (theme === 'light') {
					document.documentElement.classList.remove('dark');
					
				} else {
					document.documentElement.classList.add('dark');
				}
			})();
		</script>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spectral:300,300italic,600,600italic">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,300italic">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Kitten Carnival</title>

	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>