---
import PrevNextPostNav from '../components/PrevNextPostNav.astro';
import TagList from '../components/TagList.astro';
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---
<BaseLayout>
  <p class="pubDate">{frontmatter.pubDate.toISOString().slice(0, 10)}</p>
  <h2>{frontmatter.title}</h2>
  <div class="postBody">
    <slot />
  </div>

  <TagList tags={frontmatter.tags} />
  <PrevNextPostNav />

  <style>
    a {
      color: #00539F;
    }
  </style>
</BaseLayout>